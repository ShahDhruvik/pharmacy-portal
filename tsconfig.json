{
  "compilerOptions": {
    //Module & bundler
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    //linting
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vite/client", "vite-plugin-svgr/client"],

    //Paths
    "baseUrl": ".",
    "paths": {
      "@/assets/*": ["./src/assets/*"],
      "@/components/*": ["./src/components/*"],
      "@/context/*": ["./src/context/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/middleware/*": ["./src/middleware/*"],
      "@/pages/*": ["./src/pages/*"],
      "@/paths/*": ["src/paths/*"],
      "@/store/*": ["./src/store/*"],
      "@/types/*": ["src/types/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/socket/*": ["./src/socket/*"],
      "@/theme/*": ["./src/theme/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
